<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="14dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_back">
        <ImageView
            android:id="@+id/recycler_cart_imageview"
            android:layout_marginStart="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/recycler_cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recycler_cart_imageview"
            android:text="Product Name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/recycler_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recycler_cart_imageview"
            android:text="150 $"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_below="@+id/recycler_cart_product_name"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>