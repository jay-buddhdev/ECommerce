<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forget_Password_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/back_arrow_fpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow_black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/resetpassword_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/back_arrow_fpassword"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/resetpassword_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Email Address and We Will send You Link to Reset Password"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/resetpassword_title"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email_txtview_fpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_below="@id/resetpassword_des"
                android:layout_marginStart="25dp"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:id="@+id/fpassword_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/email_txtview_fpassword"
                android:background="@drawable/input_design"
                android:hint="abc@gmail.com"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/fpassword_btn"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_sign_in"
                android:text="Reset Password"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_below="@+id/fpassword_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>